<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:padding="4dp">

    <ImageView
        android:id="@+id/item_park_image"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/margin"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/item_park_diver"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_park_park_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"
        app:layout_constraintLeft_toRightOf="@+id/item_park_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_park_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        app:layout_constraintBottom_toTopOf="@+id/item_park_diver"
        app:layout_constraintLeft_toRightOf="@+id/item_park_image"
        app:layout_constraintTop_toBottomOf="@+id/item_park_park_name" />

    <View
        android:id="@+id/item_park_diver"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/diver"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>